<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/live_image_imageView"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/name_image"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:layout_below="@+id/name_image"
            android:layout_toRightOf="@+id/num_Download"
            android:id="@+id/num_See"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_see_image"
            />
        <TextView
            android:textSize="20sp"
            android:layout_below="@+id/name_image"
            android:layout_alignParentLeft="true"
            android:id="@+id/num_Download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_download_image"/>
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>